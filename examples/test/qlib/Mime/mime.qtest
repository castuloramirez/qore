#!/usr/bin/env qore
%require-types
%enable-all-warnings
%requires Mime
%requires UnitTest

my UnitTest $unit();

my string $str = "This is a test: æéìœü";
$unit.cmp($str, mime_decode_quoted_printable(mime_encode_quoted_printable($str)), "MIME: quoted printable");
