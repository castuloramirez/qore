#!/usr/bin/env qr
%require-types
%enable-all-warnings
%allow-bare-refs
%requires Util

%requires ../../../../qlib/QUnit.qm

%exec-class SystemCallTest

public class SystemCallTest inherits QUnit::Test {
    constructor() : Test("SystemCallTest", "1.0") {
        addTestCase("What this method is testing", \testMethod(), NOTHING);

        # Return for compatibility with test harness that checks return value.
        set_return_value(main());
    }

    testMethod() {
%ifdef Windows
        testSkip("Windows");
%endif
        string file = tmp_location() + "/output";

        system("echo -n OUTPUT > " + file);

        File f1();
        f1.open2(file);

        testAssertion("echo cmd verify", \f1.read(), (-1,), new TestResultValue("OUTPUT"));

        unlink(file);
    }
}
