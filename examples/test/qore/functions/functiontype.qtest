#!/usr/bin/env qr
%require-types
%enable-all-warnings

%requires ../../../../qlib/QUnit.qm

%exec-class FunctionTypeTest

# Function to test against
any sub simple_shift() {
    return shift argv;
}

public class FunctionTypeTest inherits QUnit::Test {
    constructor() : Test("FunctionTypeTest", "1.0") {
        addTestCase("What this method is testing", \functionTypeTestMethod(), NOTHING);

        # Return for compatibility with test harness that checks return value.
        set_return_value(main());
    }

    functionTypeTestMethod() {
        testAssertion("functionType() user", \functionType(), ("simple_shift",), new TestResultValue("user"));
        testAssertion("functionType() builtin", \functionType(), ("printf",), new TestResultValue("builtin"));
    }
}

