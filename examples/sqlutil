%new-style
%strict-args
%enable-all-warnings

%requires SqlUtil

const opts = (
    "dump-table": "t,dump-table=s",
    "data_tablespace": "d,data-tablespace=s",
    "index_tablespace": "i,index-tablespace=s",
    "help": "h,help",
    );

main();

sub usage() {
    printf("usage: %s [options] <datasource>
<datasource> format: driver:user/pass@db[%host[:port]]
  -d,--data-tablespace=ARG    use the given data tablespace name for output
  -i,--index-tablespace=ARG   use the given index tablespace name for output
  -t,--dump-table=ARG         dump the SQL for the given DB table
", get_script_name());
    exit(1);
}

sub main() {
    GetOpt g(opts);
    hash opt = g.parse3(\ARGV);

    if (opt.help || !ARGV[0])
        usage();

    Datasource ds(ARGV[0]);

    hash copt = opt.("index_tablespace", "data_tablespace");

    bool done = False;
    if (opt."dump-table") {
        done = True;
        Table table(ds, opt."dump-table");
        map printf("%s%s\n", $1, $1 =~ /;$/ ? "\n/" : ";"), table.getCreateSql(copt);
    }
    
    if (!done)
        usage();
}
