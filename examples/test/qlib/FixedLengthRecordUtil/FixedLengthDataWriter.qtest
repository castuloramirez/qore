#!/usr/bin/env qore
%require-types
%new-style
%enable-all-warnings
%requires UnitTest
%requires FixedLengthUtil

UnitTest unit();

list data = (
    ("col1" : 11111, "col2" : "bb"),
    ("col3" : "c", "col4" : "ddd", "col5" : "31122014"),
    ("col1" : 22222, "col2" : "gg"),
);

string data_text = "11111bb\ncddd31122014\n22222gg\n";


code identify_type = *string sub (string line) {
    if (line.length() == 7) {
        return "type1";
    }
    if (line.length() == 12) {
        return "type2";
    }
    return NOTHING;
};

hash specs = (
    "types" : (
        "type1" : (
            "col1" : (
                "length" : 5,
                "type"   : "int"
            ),
            "col2" : (
                "length" : 2,
                "type"   : "string",
            ),
        ),
        "type2" : (
            "col3" : (
                "length" : 1,
                "type"   : "string",
            ),
            "col4" : (
                "length" : 3,
                "type"   : "string",
            ),
            "col5" : (
                "length"   : 8,
                "type"     : "date",
                "format"   : "DDMMYYYY",
                "timezone" : "Europe/Prague",
            ),
        ),
    ),
);

hash global_options = (
    "eol" : "\n",
);

FixedLengthDataWriter w(specs, identify_type, global_options);
unit.cmp(w.write(data), data_text, 'file content check');
