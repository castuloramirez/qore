  <sect1 id="include">
    <title>include</title>
    <variablelist>
      <varlistentry>
	<term>Parse Directive</term>
	<listitem>
	  <para><code>%include</code></para>
	</listitem>
      </varlistentry>
      <varlistentry>
	<term>Command-Line</term>
	<listitem>
	  <para>n/a from the command-line</para>
	</listitem>
      </varlistentry>
      <varlistentry>
	<term>Parse Option Constant</term>
	<listitem>
	  <para>n/a</para>
	</listitem>
      </varlistentry>
      <varlistentry>
