            getColumnsUnlocked();
            return AbstractDatabase::doCallback(opt, getCreateTableSqlImpl(opt), "create table %s", name);
        }

        private *list getCreateIndexesSqlUnlocked(*hash opt, bool cache = True) {
            if (cache)
                getIndexesUnlocked();
            if (!indexes)
                return;

            return map AbstractDatabase::doCallback(opt, $1.getCreateSql(name, opt), "create index %s on %s", $1.name, name), indexes.iterator();
        }

        private *string getCreatePrimaryKeySqlUnlocked(*hash opt, bool cache = True) {
            if (cache)
                getPrimaryKeyUnlocked();
            if (primaryKey.empty())
                return;
