    */
    public hash sub make_jop(string jop, AbstractTable table, *string alias, *hash jcols, *hash cond) {
        hash h{table.getSqlName()} = ("jop": jop, "table": table, "jcols": jcols, "cond": cond, "alias": alias);
        return h;
    }

